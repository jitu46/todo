<div class="row clearfix">
	<% if todo_item.completed? %>
		<div class="complete">
			<%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
				<i style="opacity: 0;" class="fa fa-check"></i>
			<% end %>
		</div>

		<div class="todo_item">
			<p style="opacity: 0.5;"><%= todo_item.content %></p>
		</div>

		<div class="todo_item">
			<p style="opacity: 0.5;"><%= todo_item.end %></p>
		</div>

		<div class="todo_item">
			<p style="opacity: 1;"><%= todo_item.updated_at.strftime("%Y-%m-%d") %></p>
		</div>

		<div class="trash">
			<%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Are you Sure?"} do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% else %>
		<table>
			<tr>
				<div class="complete">
					<%= link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do %>
						<i class="fa fa-check"></i>
					<% end %>
				</div>


				<div class="todo_item">
					<p><%= todo_item.content %></p>
				</div>

				<div class="todo_item">
					<p style="opacity: 1;"><%= todo_item.updated_at.strftime("%Y-%m-%d") %></p>
				</div>

				<% if Date.today > todo_item.end %>
					<div class="todo_item">
						<p style="background-color:yellow;"><%= todo_item.end %></p>
					</div>
				<% else%>
					<div class="todo_item">
						<p style="opacity: 1;"><%= todo_item.end %></p>
					</div>
				<% end %>

				<div class="trash">
					<%= link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Are you Sure?"} do %>
						<i class="fa fa-trash"></i>
					<% end %>
				</div>	
			</tr><br><br>
		</table>
	<% end %>

</div>