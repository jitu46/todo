<!DOCTYPE html>
<html>

  <head>

    <title>Todo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inconsolata">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
    
    body, html {
        height: 100%;
        font-family: "Inconsolata", sans-serif;
    }
    .bgimg {
        background-position: center;
        background-size: cover;
        background-image: url("/w3images/coffeehouse.jpg");
        min-height: 75%;
    }
    .menu {
        display: none;
    }
    </style>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  
  </head>

  <body>

    <!-- Navbar Styling -->
    <div class="w3-top">
      <div class="w3-row w3-padding w3-black">
        <div class="w3-col s3">
          <%= link_to "Home ", root_path, class: "w3-button w3-black" %>
        </div>
        <%#binding.pry %>
        <% if user_signed_in? %>
          <div class="w3-col s3">
            <%= link_to " New Todo List", new_todo_list_path, class: "w3-button w3-black" %>
          </div>

          <div class="w3-col s3">
            <%= link_to "Profile", edit_user_registration_path, class: "w3-button w3-black" %>
          </div>
          
          <div class="w3-col s3">
            <%= link_to "Sign Out", destroy_user_session_path, class: "w3-button w3-black" %>
          </div>


        <% else%>
          

          <div class="w3-col s3">
            <%= link_to "Sign Up", new_user_registration_path, class: "w3-button w3-black" %>
          </div>
          <div class="w3-col s3">
            <%= link_to "Sign in", new_user_session_path, class: "w3-button w3-black" %>
          </div>

        <% end %>  
      </div>
    </div>

    <%if current_user %> 
      <div class="container">
    	 <%= yield %>
      </div>
    <%else%>
      <%= yield %>
    <% end %>

  </body>
</html>
