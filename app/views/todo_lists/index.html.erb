<% if user_signed_in? %> 
	<% @todo_lists.each do |todo_list| %>

	  <div class="index row clearfix">
	    <br><h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
	    <p class="todo_list_sub_title"><%= todo_list.description %></p>
	  </div>
	<% end %>

<% else %>

	<br><br><br><br><h2>Please Click on SignUp/SignIn to Create your own ToDo List</h2>

<% end %>